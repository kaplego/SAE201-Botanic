<Window
    x:Class="MaquetteBotanic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MaquetteBotanic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Gestion des commandes | Botanic"
    Width="1100"
    Height="700"
    MinHeight="410"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
		<Style x:Key="ButtonsCategories" TargetType="Button">
			<Setter Property="Margin" Value="4,0,4,0" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Padding" Value="6,2" />
			<Setter Property="Background" Value="#FFD9D9D9" />
			<Setter Property="Foreground" Value="#FF393939" />
			<Setter Property="FontSize" Value="14" />
			<Style.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="4,4,0,0" />
				</Style>
			</Style.Resources>
		</Style>
		<Style x:Key="TBkProduit" TargetType="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="MaxHeight" Value="30" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5,0,5,0" />
        </Style>
        <Style x:Key="TBkPrixProduit" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="MaxHeight" Value="30" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="Foreground" Value="#FF00634C" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="TBxQteProduit" TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="BorderBrush" Value="#FFD9D9D9" />
            <Setter Property="Background" Value="#FFD9D9D9" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="2" />
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="SepProduits" TargetType="Separator">
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <Grid
            Grid.ColumnSpan="2"
            Height="45"
            Background="#FF00634C">
            <Image
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="/img/logo.png"
                Stretch="Uniform" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="20,20,20,20">
                <TextBlock
                    FontFamily="Rubik"
                    FontSize="18"
                    FontWeight="Bold"
                    TextAlignment="Center"
                    TextWrapping="Wrap">
                    Commander un produit de la centrale
                </TextBlock>

                <!--  Catégories  -->
                <StackPanel x:Name="panelCategories" Margin="0,10,0,0">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="btnsCategories" Orientation="Horizontal" />
                    </ScrollViewer>
                    <Rectangle
                        Height="3"
                        Fill="#FFD9D9D9"
                        StrokeThickness="0" />
                </StackPanel>
                <!--  Sous-catégories  -->
                <StackPanel
                    x:Name="panelSousCategories"
                    Margin="0,10,0,0"
                    Visibility="Hidden">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="btnsSousCategories" Orientation="Horizontal" />
                    </ScrollViewer>
                    <Rectangle
                        Height="3"
                        Fill="#FFD9D9D9"
                        StrokeThickness="0" />
                </StackPanel>

                <!--  Filtres  -->
                <Grid
                    x:Name="gridFiltres"
                    Margin="0,10,0,0"
                    Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="cbCouleur"
                        Margin="0,0,5,0"
                        SelectedIndex="0"
                        SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Aucun filtre de couleur" />
                    </ComboBox>
                    <ComboBox x:Name="cbTaille"
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        SelectedIndex="0"
                        SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Aucun filtre de taille" />
                    </ComboBox>
                </Grid>
                
                <!--  Produits  -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <DataGrid x:Name="dgProduits" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="NB Achat" MinWidth="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" IsReadOnly="True" MinWidth="100" />
                            <DataGridTextColumn Header="Prix" Binding="{Binding Prix}" IsReadOnly="True" MinWidth="60" />
                            <DataGridTextColumn Header="Couleur" Binding="{Binding Couleur}" IsReadOnly="True" MinWidth="50" />
                            <DataGridTextColumn Header="Taille" Binding="{Binding Taille}" IsReadOnly="True" MinWidth="50" />
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" IsReadOnly="True" MinWidth="125" />
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Separator
                    Width="1"
                    HorizontalAlignment="Left"
                    Background="#FF00634C"
                    Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
